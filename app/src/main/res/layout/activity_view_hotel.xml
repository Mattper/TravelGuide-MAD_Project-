<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#ADCAE1"
    android:orientation="vertical"

    tools:context=".ViewHotelActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="View Hotel"
        android:textColor="#FF9800"
        android:textSize="20dp" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/vixId"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/vvc1"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-8dp"
           />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:background="#E3EAE0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/viewname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="Name"
                android:textColor="#00BCD4"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Address"
                android:textColor="#00BCD4"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/viewaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="20dp"

                android:text="Contact Us"
                android:textColor="#201F1F" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Owner"
                android:textColor="#00BCD4"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/viewowner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="20dp"

                android:text="Contact Us"
                android:textColor="#201F1F" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Contact"
                android:textColor="#00BCD4"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/viewcontact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="20dp"

                android:text="Contact Us"
                android:textColor="#201F1F" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Facilities"
                android:textColor="#00BCD4"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/viewfacilities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="20dp"

                android:text="Contact Us"
                android:textColor="#201F1F" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <Button
                    android:id="@+id/modiBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"

                    android:text="MODIFY"
                    android:textColor="@color/white"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/deleteBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"

                    android:text="DELETE"
                    android:textColor="@color/white"
                    tools:ignore="ButtonStyle" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>